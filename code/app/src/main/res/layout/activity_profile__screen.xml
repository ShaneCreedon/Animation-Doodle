<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:elevation="4dp"
            android:paddingBottom="0dp"
            android:background="@drawable/top_rated">

            <ImageView
                android:id="@+id/drop_down_option_menu"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:onClick="menu"
                android:src="@drawable/menu" />

            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/drop_down_option_menu"
                android:layout_centerHorizontal="true"
                android:text="Profile"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/user_profile_photo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/profile"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile" />

            <Button
                android:id="@+id/done"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/user_profile_photo"
                android:layout_marginStart="24dp"
                android:clickable="true"
                android:onClick="doneButton1"
                android:text="Done"
                android:textSize="8dp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/ideas"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignBaseline="@+id/done"
                android:layout_alignBottom="@+id/done"
                android:layout_alignParentEnd="true"
                android:text="Done"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu_layout"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="53dp"
            android:background="@drawable/button_border"
            android:elevation="8dp"
            android:visibility="invisible">

            <Button
                android:id="@+id/log_out_button"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:elevation="0dp"
                android:fontFamily="sans-serif"
                android:onClick="logOut"
                android:text="@string/logout_form"
                android:textSize="11sp" />

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="270dp"
        android:paddingTop="0dp"
        android:background="@color/shadow_color">

        <EditText
                android:id="@+id/textViewAbout"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:paddingRight="10dp"
                android:onClick="about"
                android:elevation="4dp"
                android:padding="20dp"
                android:focusable="false"
                android:imeOptions="actionDone"
                android:backgroundTint="#69000000" />

        <EditText
                android:id="@+id/textView"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#69000000"
                android:onClick="appIdeas"
                android:focusable="false"
                android:clickable="true"
                android:layout_toRightOf="@id/textViewAbout"
                android:elevation="4dp"
                android:padding="20dp" />


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewAbout"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:paddingTop="5dp"
        android:visibility="visible" />


</RelativeLayout>

