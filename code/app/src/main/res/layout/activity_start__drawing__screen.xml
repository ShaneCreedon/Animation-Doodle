<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="ca326.com.activities.Start_Drawing_Screen">

    <RelativeLayout
        android:id="@+id/sketch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/timeline"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp">

        <ca326.com.activities.CanvasView
            android:id="@+id/canvas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/nice_grey">

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@android:color/transparent"
            android:onClick="open_menu"
            app:srcCompat="@drawable/menu" />

        <ImageButton
            android:id="@+id/top_rated"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:drawable/btn_default_small"
            android:onClick="goRight"
            android:src="@drawable/star_w" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:drawable/btn_default_small"
            android:cropToPadding="true"
            android:onClick="goLeft"
            android:src="@drawable/profile_w" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_menu"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tool_bar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_border"
        android:elevation="2dp"
        android:visibility="invisible">

        <ImageButton
            android:id="@+id/change_colour"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_above="@+id/onionSkinningButton"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:adjustViewBounds="true"
            android:background="@android:drawable/btn_default_small"
            android:scaleType="fitCenter"
            android:src="@drawable/rainbow_colour_picker" />

        <Button
            android:id="@+id/clear"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/change_colour"
            android:layout_below="@+id/onionSkinningButton"
            android:background="@android:color/holo_red_light"
            android:onClick="clearCanvas"
            android:text="@string/clear"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/onionSkinningButton"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@android:drawable/btn_default_small"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:src="@drawable/onion" />

        <Button
            android:id="@+id/undo_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/save"
            android:layout_alignTop="@+id/change_colour"
            android:background="@android:color/holo_green_dark"
            android:onClick="undo"
            android:text="@string/undo"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/save"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/clear"
            android:layout_alignBottom="@+id/clear"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="19dp"
            android:background="@android:color/holo_orange_dark"
            android:onClick="save_external"
            android:text="SAVE"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/prev_frame"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/onionSkinningButton"
            android:layout_below="@+id/onionSkinningButton"
            android:layout_marginTop="12dp"
            android:background="@color/colorPrimary"
            android:onClick="previous_frame"
            android:text="Previous"
            android:textColor="@android:color/white"
            android:textSize="10dp" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/timeline"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@android:drawable/divider_horizontal_bright"
        tools:context=".MainActivity">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/frames"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="false"
            android:adjustViewBounds="true"
            android:background="@color/button_focused"
            android:divider="@null"
            android:maxHeight="42dp"
            android:maxWidth="42dp"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:reverseLayout="true">

        </android.support.v7.widget.RecyclerView>

        <ImageButton
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:background="@color/nice_grey"
            android:onClick="play_animation"
            app:srcCompat="@drawable/play" />

    </RelativeLayout>

</RelativeLayout>