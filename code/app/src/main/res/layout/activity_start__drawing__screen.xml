<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="ca326.com.activities.Start_Drawing_Screen">

    <RelativeLayout
        android:id="@+id/sketch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/timeline"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp">

        <ca326.com.activities.CanvasView
            android:id="@+id/canvas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <RelativeLayout
            android:id="@+id/layout_menu"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_border"
            android:elevation="2dp"
            android:visibility="invisible">

            <ImageButton
                android:id="@+id/save_animation"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/frame_rate_btn"
                android:layout_alignTop="@+id/play_button"
                android:adjustViewBounds="true"
                android:background="@android:drawable/btn_default_small"
                android:onClick="save_animation"
                android:scaleType="fitCenter"
                app:srcCompat="@android:drawable/ic_menu_compass" />

            <ImageButton
                android:id="@+id/frame_rate_btn"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/undo_button"
                android:layout_below="@+id/onionSkinningButton"
                android:adjustViewBounds="true"
                android:background="@android:drawable/btn_default_small"
                android:onClick="prompt_frame_rate"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/frame_rate" />

            <ImageButton
                android:id="@+id/change_colour"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/save"
                android:layout_marginStart="30dp"
                android:adjustViewBounds="true"
                android:background="@android:drawable/btn_default_small"
                android:scaleType="fitCenter"
                android:src="@drawable/rainbow_colour_picker" />

            <Button
                android:id="@+id/clear"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/change_colour"
                android:layout_alignTop="@+id/onionSkinningButton"
                android:background="@android:color/holo_red_light"
                android:onClick="clearCanvas"
                android:text="@string/clear"
                android:textSize="8sp" />

            <Button
                android:id="@+id/upload"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_alignBaseline="@+id/clear"
                android:layout_alignBottom="@+id/clear"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/clear"
                android:background="@android:color/holo_red_light"
                android:onClick="upload"
                android:text="Upload"
                android:textSize="8sp" />

            <ImageButton
                android:id="@+id/onionSkinningButton"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_above="@+id/save"
                android:layout_alignStart="@+id/save"
                android:layout_marginBottom="14dp"
                android:adjustViewBounds="true"
                android:background="@android:drawable/btn_default_small"
                android:cropToPadding="true"
                android:scaleType="fitCenter"
                android:src="@drawable/onion" />

            <Button
                android:id="@+id/undo_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/onionSkinningButton"
                android:layout_marginEnd="29dp"
                android:background="@android:color/holo_green_dark"
                android:onClick="undo"
                android:text="@string/undo"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="8sp" />

            <Button
                android:id="@+id/save"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@android:color/holo_orange_dark"
                android:onClick="save_external"
                android:text="SAVE"
                android:textColor="@android:color/white"
                android:textSize="8sp" />

            <Button
                android:id="@+id/prev_frame"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/change_colour"
                android:layout_below="@+id/change_colour"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary"
                android:onClick="previous_frame"
                android:text="Previous"
                android:textColor="@android:color/white"
                android:textSize="8sp" />

            <ImageButton
                android:id="@+id/play_button"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/save"
                android:layout_alignTop="@+id/prev_frame"
                android:adjustViewBounds="true"
                android:background="@android:drawable/btn_default_small"
                android:onClick="play_animation"
                app:srcCompat="@drawable/play" />
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/nice_grey">

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="shift_menu"
            app:srcCompat="@drawable/button_background_colour" />

        <ImageButton
            android:id="@+id/top_rated"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:onClick="goToTopRatedAnimations"
            android:src="@drawable/top_rated_icon_w" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:onClick="goToProfile"
            android:src="@drawable/profile_w" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/timeline"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@android:drawable/divider_horizontal_bright"
        tools:context=".MainActivity">


        <ImageButton
            android:id="@+id/add_frame_btn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:background="@color/button_focused"
            android:onClick="add_frame"
            app:srcCompat="@drawable/plus" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/frames"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="false"
            android:layout_marginRight="50dp"
            android:adjustViewBounds="true"
            android:background="@color/button_focused"
            android:divider="@null"
            android:maxHeight="42dp"
            android:maxWidth="42dp"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:reverseLayout="true">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</RelativeLayout>